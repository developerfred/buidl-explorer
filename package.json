{
  "name": "buidl-explorer",
  "version": "0.1.0",
  "description": "Join the #BUIDL movement and contribute to open-source Ethereum projects",
  "author": "wslyvh",
  "license": "MIT",
  "keywords": [
    "ethereum"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wslyvh/buidl-explorer.git"
  },
  "bugs": {
    "url": "https://github.com/wslyvh/buidl-explorer/issues"
  },
  "homepage": "https://github.com/wslyvh/buidl-explorer#readme",
  "scripts": {
    "start": "node index.js",
    "client": "cd client && npm run start",
    "server": "nodemon index.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "test": "cd client && npm run test",
    "lint": "tslint -c client/tslint.json -p client/tsconfig.json",
    "lint-fix": "tslint --fix -c client/tslint.json -p client/tsconfig.json"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "typescript": "^3.1.6"
  }
}
