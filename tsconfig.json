{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2015",
      "es2017",
      "dom",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "jsx": "preserve",
    "outDir": "build"
  },
  "exclude": [
    "**/build",
    "**/client",
    "**/coverage",
    "**/dist",
    "**/node_modules",
  ],
}
